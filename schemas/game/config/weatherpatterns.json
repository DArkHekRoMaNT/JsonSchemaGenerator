{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "WeatherPatternConfig[]",
  "type": "array",
  "items": {
    "$ref": "#/definitions/WeatherPatternConfig"
  },
  "definitions": {
    "WeatherPatternConfig": {
      "allOf": [
        {
          "$ref": "#/definitions/ConditionalPatternConfig"
        },
        {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "durationHours": {
              "$ref": "#/definitions/NatFloat"
            },
            "sceneBrightness": {
              "$ref": "#/definitions/NatFloat"
            },
            "precipitation": {
              "$ref": "#/definitions/WeatherPrecipitationConfig"
            },
            "clouds": {
              "$ref": "#/definitions/WeatherCloudConfig"
            },
            "fog": {
              "$ref": "#/definitions/WeatherFogConfig"
            }
          }
        }
      ]
    },
    "NatFloat": {
      "type": "object",
      "description": "A more natural random number generator (nature usually doesn't grow by the exact same numbers nor does it completely randomly)",
      "properties": {
        "offset": {
          "type": "number",
          "format": "float"
        },
        "avg": {
          "type": "number",
          "format": "float"
        },
        "var": {
          "type": "number",
          "format": "float"
        },
        "dist": {
          "$ref": "#/definitions/EnumDistribution"
        }
      }
    },
    "EnumDistribution": {
      "type": "string",
      "description": "The distribution of the random numbers ",
      "x-enumNames": [
        "UNIFORM",
        "TRIANGLE",
        "GAUSSIAN",
        "NARROWGAUSSIAN",
        "INVERSEGAUSSIAN",
        "NARROWINVERSEGAUSSIAN",
        "INVEXP",
        "STRONGINVEXP",
        "STRONGERINVEXP",
        "DIRAC",
        "VERYNARROWGAUSSIAN"
      ],
      "enum": [
        "uniform",
        "triangle",
        "gaussian",
        "narrowgaussian",
        "inversegaussian",
        "narrowinversegaussian",
        "invexp",
        "stronginvexp",
        "strongerinvexp",
        "dirac",
        "verynarrowgaussian"
      ]
    },
    "WeatherPrecipitationConfig": {
      "type": "object",
      "properties": {
        "baseIntensity": {
          "$ref": "#/definitions/NatFloat"
        },
        "intensityNoise": {
          "$ref": "#/definitions/NoiseConfig"
        },
        "particleSize": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "NoiseConfig": {
      "type": "object",
      "properties": {
        "amplitudes": {
          "type": "array",
          "items": {
            "type": "number",
            "format": "double"
          }
        },
        "frequencies": {
          "type": "array",
          "items": {
            "type": "number",
            "format": "double"
          }
        }
      }
    },
    "WeatherCloudConfig": {
      "type": "object",
      "properties": {
        "brightness": {
          "$ref": "#/definitions/NatFloat"
        },
        "heightMul": {
          "$ref": "#/definitions/NatFloat"
        },
        "baseThickness": {
          "$ref": "#/definitions/NatFloat"
        },
        "thinCloudMode": {
          "$ref": "#/definitions/NatFloat"
        },
        "undulatingCloudMode": {
          "$ref": "#/definitions/NatFloat"
        },
        "thicknessMul": {
          "$ref": "#/definitions/NatFloat"
        },
        "locationalThickness": {
          "$ref": "#/definitions/NoiseConfig"
        },
        "opaqueness": {
          "$ref": "#/definitions/NatFloat"
        }
      }
    },
    "WeatherFogConfig": {
      "type": "object",
      "properties": {
        "fogBrightness": {
          "$ref": "#/definitions/NatFloat"
        },
        "density": {
          "$ref": "#/definitions/NatFloat"
        },
        "mistDensity": {
          "$ref": "#/definitions/NatFloat"
        },
        "mistYPos": {
          "$ref": "#/definitions/NatFloat"
        }
      }
    },
    "ConditionalPatternConfig": {
      "type": "object",
      "x-abstract": true,
      "properties": {
        "weightFunction": {
          "$ref": "#/definitions/EnumChanceFunction"
        },
        "minRain": {
          "type": [
            "null",
            "number"
          ],
          "format": "float"
        },
        "maxRain": {
          "type": [
            "null",
            "number"
          ],
          "format": "float"
        },
        "rainRange": {
          "type": "number",
          "format": "float"
        },
        "minTemp": {
          "type": [
            "null",
            "number"
          ],
          "format": "float"
        },
        "maxTemp": {
          "type": [
            "null",
            "number"
          ],
          "format": "float"
        },
        "tempRange": {
          "type": "number",
          "format": "float"
        },
        "weight": {
          "type": "number",
          "format": "float"
        }
      }
    },
    "EnumChanceFunction": {
      "type": "string",
      "description": "",
      "x-enumNames": [
        "None",
        "TestRainTemp",
        "AvoidHotAndDry"
      ],
      "enum": [
        "none",
        "testRainTemp",
        "avoidHotAndDry"
      ]
    }
  }
}